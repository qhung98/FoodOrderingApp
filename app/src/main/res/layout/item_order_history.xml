<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOrderId"
            style="@style/TextViewDefault"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:text="ID: 123456789"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="NGƯỜI ĐẶT: "/>

            <TextView
                android:id="@+id/tvHistoryUserName"
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textAllCaps="true"
                android:text="NGUYỄN VĂN HOÀNG"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="SỐ ĐIỆN THOẠI:"/>

            <TextView
                android:id="@+id/tvHistoryPhone"
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="0352429696"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="GIAO TỚI: "/>

            <TextView
                android:id="@+id/tvHistoryAddress"
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textAllCaps="true"
                android:text="275 NGUYỄN TRÃI, THANH XUÂN, HÀ NỘi"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="NGÀY ĐẶT:"/>

            <TextView
                android:id="@+id/tvHistoryTime"
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="16:03:02 - 02/06/2020"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="TỔNG ĐƠN HÀNG:"/>

            <TextView
                android:id="@+id/tvHistorySum"
                style="@style/TextViewDefault"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="1,200,000đ"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
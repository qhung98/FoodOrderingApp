<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bullet"
        android:layout_width="wrap_content"
        android:layout_height="24dp">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_bullet" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvOrderNameAndQuantity"
        style="@style/TextViewDefault"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/bullet"
        android:layout_toStartOf="@id/tvOrdersPrice"
        android:text="COMBO GA RAN X 3"/>

    <TextView
        android:id="@+id/tvOrdersPrice"
        style="@style/TextViewDefault"
        android:layout_marginStart="15dp"
        android:layout_alignParentEnd="true"
        android:text="30000"/>

</RelativeLayout>